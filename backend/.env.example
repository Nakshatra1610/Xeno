# Backend Environment Variables

# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/xeno_shopify?schema=public"

# JWT
JWT_SECRET="your-jwt-secret-key-generate-with-openssl"
JWT_EXPIRES_IN="7d"

# Shopify
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_SCOPES="read_customers,read_orders,read_products,read_inventory"
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret"

# Sync
CRON_SECRET="your-cron-secret"

# CORS
ALLOWED_ORIGINS="http://localhost:3000"
